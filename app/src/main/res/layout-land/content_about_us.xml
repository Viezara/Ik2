<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbe3e3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ikode.viezara.ikode.AboutUs">

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_ikodeglobe"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/iklabtTxt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView32"
        android:layout_toEndOf="@+id/imageView32" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutAbout"
        android:layout_below="@+id/iklabtTxt"
        android:layout_toRightOf="@+id/imageView32"
        android:layout_toEndOf="@+id/imageView32">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="About"
            android:typeface="sans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:id="@+id/textView21"
            android:layout_below="@+id/view"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView21"
            android:id="@+id/view1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutInfos"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/relativeLayoutAbout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Version:"
            android:id="@+id/textView3"
            android:textColor="#ff000000"
            android:textSize="12sp"
            android:typeface="sans"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Updates:"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Licenses"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:typeface="sans"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Our Privacy Policy :"
            android:layout_marginTop="5dp"
            android:id="@+id/textView8"
            android:textSize="12sp"
            android:typeface="sans"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:layout_below="@+id/textView6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Terms of Use :"
            android:layout_marginTop="5dp"
            android:id="@+id/textView11"
            android:textSize="12sp"
            android:typeface="sans"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="FAQ :"
            android:layout_marginTop="5dp"
            android:id="@+id/textViewFaq"
            android:typeface="sans"
            android:textSize="12sp"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:layout_below="@+id/textView11"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1.3.2016"
            android:textSize="12sp"
            android:id="@+id/textView28"
            android:textColor="#ff000000"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignRight="@+id/privacyPolicy"
            android:layout_alignEnd="@+id/privacyPolicy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1.1.2"
            android:textSize="12sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:id="@+id/textView29"
            android:layout_below="@+id/textView28"
            android:layout_alignRight="@+id/textView28"
            android:layout_alignEnd="@+id/textView28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=">"
            android:textSize="20sp"
            android:id="@+id/privacyPolicy"
            android:typeface="sans"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=">"
            android:textSize="20sp"
            android:typeface="sans"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:id="@+id/licensesUse"
            android:clickable="true"
            android:layout_below="@+id/textView29"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=">"
            android:id="@+id/faQ"
            android:textSize="20sp"
            android:typeface="sans"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_alignBaseline="@+id/textViewFaq"
            android:layout_alignBottom="@+id/textViewFaq"
            android:layout_alignLeft="@+id/privacyPolicy"
            android:layout_alignStart="@+id/privacyPolicy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=">"
            android:id="@+id/termsOfUse"
            android:textSize="20sp"
            android:typeface="sans"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_above="@+id/textViewFaq"
            android:layout_alignRight="@+id/faQ"
            android:layout_alignEnd="@+id/faQ" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:id="@+id/relativeLayoutCopyright"
        android:layout_below="@+id/relativeLayoutInfos">


        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:id="@+id/view3" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Â© Ikona AG, Switzerland -all rights reserved-"
            android:id="@+id/textView17"
            android:gravity="center"
            android:typeface="sans"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView17"
            android:id="@+id/view4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutCredits"
        android:layout_below="@+id/relativeLayoutCopyright"
        android:layout_alignLeft="@+id/relativeLayoutInfos"
        android:layout_alignStart="@+id/relativeLayoutInfos">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Credits:"
            android:typeface="sans"
            android:textSize="14sp"
            android:textStyle="italic|bold"
            android:id="@+id/textView12"
            android:textColor="#ff000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Peter Rathgeber"
            android:textColor="#ff000000"
            android:id="@+id/textView13"
            android:textSize="14sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_above="@+id/textView18"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Demy Mendoza"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#ff000000"
            android:id="@+id/textView25"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_below="@+id/textView19"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Aries Suson"
            android:layout_marginTop="5dp"
            android:textColor="#ff000000"
            android:id="@+id/textView19"
            android:typeface="sans"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView18"
            android:layout_alignRight="@+id/textView18"
            android:layout_alignEnd="@+id/textView18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Gin Galang"
            android:layout_marginTop="5dp"
            android:textColor="#ff000000"
            android:id="@+id/textView18"
            android:textSize="14sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_below="@+id/textView12"
            android:layout_alignRight="@+id/textView13"
            android:layout_alignEnd="@+id/textView13" />

    </RelativeLayout>


</RelativeLayout>
