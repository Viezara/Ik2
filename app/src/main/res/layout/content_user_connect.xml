<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbe3e3"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="10dp"
    tools:context="com.ikode.viezara.ikode.UserConnect">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idToken"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="15sp"
        android:text="●Enter your complete ID Token"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tokenPhrase"
        android:layout_alignStart="@+id/tokenPhrase" />

    <EditText
        android:id="@+id/tokenPhrase"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/idToken"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_custom"
        android:drawableLeft="@drawable/ic_token_logo"
        android:ems="10"
        android:hint=" ******"
        android:paddingLeft="5dp"
        android:textCursorDrawable="@null"
        android:textColor="#ff000000"
        android:layout_alignRight="@+id/tokenCode"
        android:layout_alignEnd="@+id/tokenCode"
        android:layout_alignLeft="@+id/tokenCode"
        android:layout_alignStart="@+id/tokenCode" />

    <EditText
        android:id="@+id/tokenCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tokenPhrase"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/edittext_custom"
        android:drawableLeft="@drawable/ic_passphrase"
        android:ems="10"
        android:hint=" ******"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:password="true"
        android:textColor="#ff000000" />

    <!-- <Button
         style="?android:attr/buttonStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text=""
         android:id="@+id/button5"
         android:background="@drawable/button_createacct"
         android:layout_above="@+id/button6"
         android:layout_alignLeft="@+id/connect_btn"
         android:layout_alignStart="@+id/connect_btn" />-->



    <Button
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:id="@+id/connectBtn"
        android:text="CONNECT"
        android:typeface="sans"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#dbe3e3"
        android:textSize="14sp"
        android:background="@drawable/button_shadow"
        android:layout_below="@+id/tokenCode"
        android:layout_alignLeft="@+id/forgotToken"
        android:layout_alignStart="@+id/forgotToken" />

    <Button
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:id="@+id/forgotToken"
        android:text="FORGOT ID TOKEN"
        android:layout_marginTop="10dp"
        android:typeface="sans"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#dbe3e3"
        android:textSize="14sp"
        android:background="@drawable/button_shadow"
        android:layout_below="@+id/connectBtn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
