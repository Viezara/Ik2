<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context="com.ikode.viezara.ikode.License">

    <ScrollView
        android:id="@+id/scrollLicense"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#dbe3e3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="@string/licenseseach"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="10dp"
                android:text="@string/apacheText"
                android:id="@+id/textView50"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:autoLink="web"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="@string/licenseseach2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/read_license"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/download_license"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="License"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/license_grant"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="Restrictions"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/restriction_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="Modifications to Application"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/modification_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="Term and Termination"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
            android:text="@string/termi_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/termi_2"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/termi_3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="Severability"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/severi_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="Ammendments to this Agreement"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/ammendment_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="Contact Information"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="15sp"
                android:text="@string/contact_1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#ff000000"
                android:textSize="20sp"
                android:textStyle="normal"
                android:typeface="sans"
                android:text="@string/street"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:typeface="sans"
                android:textSize="20sp"
                android:text="@string/street_1"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#ff000000"
                android:textSize="20sp"
                android:textStyle="normal"
                android:typeface="sans"
                android:text="@string/country"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:textStyle="italic"
                android:typeface="sans"
                android:text="@string/license_footer"
                />
            <LinearLayout
                android:id="@+id/bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                 >
                <Button
                    android:id="@+id/licenseOkBtn"
                    android:background="@drawable/button_shadow"
                    android:layout_width="150dp"
                    android:layout_height="36dp"
                    android:typeface="sans"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#dbe3e3"
                    android:layout_weight="0"
                    android:text="AGREE" />
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
