<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE3E3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ikode.viezara.ikode.SplashActivity"
    tools:showIn="@layout/activity_splash">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout6">


        <ImageView
            android:id="@+id/imageView15"
            android:layout_marginTop="16dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_ikodeglobe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/iklsplashTxt"
            android:textSize="18sp"
            android:layout_below="@+id/imageView15"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="#SayNoToFraud"
            android:typeface="sans"
            android:textStyle="bold|italic"
            android:layout_marginTop="48dp"
            android:textSize="24sp"
            android:id="@+id/textViewFraud"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iklsplashTxt"
            />



        <ImageView
            android:id="@+id/imageView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewFraud"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/quote" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/relativeLayout5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout6">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— Initializing the IkodeSC Reader. This may take a few seconds."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp" />

        <com.ikode.viezara.ikode.NumberProgressBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/NumberProgressBar_Default"
            android:id="@+id/numberbar1"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="28dp" />

    </RelativeLayout>


</RelativeLayout>
